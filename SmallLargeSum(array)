import java.util.*;
public class main {

    public static  int SmallLargeSum(int[] arr) {
        if(arr==null || arr.length<=3){
            return 0;
        }
        int largesteven = Integer.MIN_VALUE;
        int secondteven = Integer.MIN_VALUE;
        int largestodd = Integer.MIN_VALUE;
        int secondodd = Integer.MIN_VALUE;
        for(int i =0;i<arr.length;i++){

            int val= arr[i];
            if(i%2==0){
                if(val>largesteven){
                    secondteven=largesteven;
                    largesteven=val;
                }
                else if(val>secondteven){
                    secondteven=val;
                }}
            else{if(val>largestodd){
                    secondodd=largestodd;
                    largestodd=val;
                }
                else if(val>secondodd){
                    secondodd=val;
                }
                    
                }
               
            }
        
        if (secondteven == Integer.MIN_VALUE) secondteven = 0;
        if (secondodd == Integer.MIN_VALUE) secondodd = 0;

         return secondodd+secondteven;

        
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);

        int n= sc.nextInt();
        int[] arr= new int[n];
        System.out.println("enter values in array : ");
        for(int i =0;i<n;i++){
            arr[i]= sc.nextInt();

        }
        System.out.println(Arrays.toString(arr));
        System.out.println(SmallLargeSum(arr));
    }


}
