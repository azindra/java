import java.util.*;
public class arry{
static class Station{
int distance;
int fuel;
Station(int d,int f){
distance = d;
fuel =f;
}
}
public static int minstop(int D ,int F,Station[] stations){
Arrays.sort(stations,Comparator.comparingInt(s->s.distance));
PriorityQueue<Integer> maxheap = new PriorityQueue<>(Collections.reverseOrder());
int currentreach =F;
int stops=0;
int i =0;
while(currentreach<D){
while(i<stations.length && stations[i].distance<=currentreach){
maxheap.offer(stations[i].fuel);
i++;
}
if(maxheap.isEmpty()){
return -1;
}
currentreach += maxheap.poll();
stops++;
}
return stops;
}
public static void main(String[] args){
Scanner sc = new Scanner(System.in);
int D = sc.nextInt();
int F = sc.nextInt();
int N= sc.nextInt();
Station[] stations= new Station[N];
for(int i =0;i<N;i++){
stations[i]= new Station(sc.nextInt(),sc.nextInt());
}
System.out.println(minstop(D,F,stations));

}}
