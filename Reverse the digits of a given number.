import java.util.*;
public class main1 {

    public static int reversedigit(int n){
        int rev =0;
        int num = Math.abs(n);
        while (num>0) {
            rev = rev*10+num%10;
            num /=10;

            
        }
        return n<0 ? -rev:rev;
    }
    public static void main(String[] args) {
        Scanner sc = new Scanner (System.in);
        System.out.println("enter num :");
        int num=sc.nextInt();
        System.out.println("the reverse of "+num+" : "+reversedigit(num));
    }
}
