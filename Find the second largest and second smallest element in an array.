import java.util.*;
    public class arry {
    
        public static void main(String[] args) {
            Scanner sc = new Scanner(System.in);
            System.out.println("enter size ");
            int size = sc.nextInt();
            int[] arra = new int[size];
            System.out.println("enter elements: ");
            for(int i =0;i<size;i++){
                 arra[i]=sc.nextInt();

            }
            System.out.println("array : "+Arrays.toString(arra));
            int largest=Integer.MIN_VALUE;
            int second_largest=Integer.MIN_VALUE;
            int second_small= Integer.MAX_VALUE;
            int smallest= Integer.MAX_VALUE;
            for(int i:arra){
                if(i>largest){
                    second_largest=largest;
                    largest=i;

                    
                }
                else if (i>second_largest && i!=largest){
                    second_largest=i;
                }
                if(i<smallest){
                    second_small=smallest;
                    smallest = i;
                }
                else if(i<second_small && i!=smallest){
                    second_small=i;
                }

            }
            if(second_largest==Integer.MIN_VALUE){
                System.out.println("second largest element doest exist");

            }
            else{
                System.out.println("second largest element : "+second_largest);
                System.out.println("largest element : "+largest);
                
            }
            if(second_small==Integer.MIN_VALUE){
                System.out.println("second smallest element doest exist");

            }
            else{
                System.out.println("second smallest element : "+second_small);
                System.out.println("smallest element : "+smallest);}}}

            }
